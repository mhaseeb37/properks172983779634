<div class="devExploreperks   container perks_landing container--{{ container_size }} section-spacing container--with-aside-paddings ">
  <div class="devTitlewithBtn">
    {% if section.settings.title != blank %}
      <h2>{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.badge != blank %}
      <div class="devBtnText">
        <p>{{ section.settings.badge }}</p>
      </div>
    {% endif %}
  </div>
  <div class="section_sub_h">
    {{ section.settings.subtitle }}
  </div>
  <div class="devTotalPerks">
     {% for block in section.blocks %}
      <div class="devSinglePerk">
        <div class="devTitle">
          {% if block.settings.title != blank %}
            {{ block.settings.title }}
          {% endif %}
        </div>

        <div>
          <!-- Additional button -->
          {% if block.settings['link-text_2'] != blank %}
            <div class="data-pup-btn addi_button">
              <a href="{{ block.settings.url }}">
                {{ block.settings['link-text_2'] }}
                {% render 'icon', icon_name: 'chevron', class: 'devrighticon' %}
              </a>
            </div>
          {% endif %}

          <!-- Primary button -->
          <div class="data-pup-btn popup_button" data-pup="{{ block.settings.trigger_t }}">
            {% if block.settings['link-text'] != blank %}
              {% if block.settings['link-text'] != blank %} {{ block.settings['link-text'] }} {% endif %}
              {% render 'icon', icon_name: 'chevron', class: 'devrighticon' %}
            {% endif %}
          </div>
        </div>

        {% if block.settings.paragraph != blank %}
          <div class="devDetailsText">
            <p>{{ block.settings.paragraph }}</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
<script>
  // Select elements
  var alltrigger = document.querySelectorAll(".devSinglePerk .popup_button");
  var popup_over = document.querySelector(".popup_overlay");
  var main_inner = document.querySelector(".popup_block_inner-m.join_freepopup");
  var How_itwork = document.querySelector(".popup_block_inner-m.how-it-workpopup");

  // Iterate over each trigger element
  alltrigger.forEach(function(ele) {
    ele.addEventListener("click", function(event) {
      // Prevent default action and check for issues
      event.preventDefault();

      // Get the data attribute and log it
      var attribute = ele.getAttribute("data-pup");

      // Remove 'active' class from all popup elements
      var Allpopup = document.querySelectorAll(".inner_proper_main");
      Allpopup.forEach(function(ele) {
        ele.classList.remove("active");
      });

      // Select and log the specific popup element to be activated
      var getThePopup = document.querySelector(".inner_proper_main[data-popup='" + attribute + "']");

      // Ensure the popup exists before adding the 'active' class
      if (getThePopup) {
        getThePopup.classList.add("active");

        // Display popup overlay and inner content as needed
        popup_over.style.display = "flex";
        main_inner.style.display = "block";
        How_itwork.style.display = "none";
      } else {
        console.warn("Popup element not found for attribute:", attribute);
      }
    });
  });
</script>
