<div class='product-general-info-block vandor_block' {{ block.shopify_attributes }}>
  <a
    class='unstyled-link product-general-info-block__vendor body-color'
    href='/collections/all?filter.p.vendor={{ product.vendor }}'
  >
    {%- if product != blank -%}
      {{ product.vendor }}
    {%- else -%}
      {{ 'product.store_front.default_vendor' | t }}
    {%- endif -%}
  </a>
</div>
<style>
  .product-general-info-block.vandor_block a.product-general-info-block__vendor.body-color{
color: rgba(59, 57, 51, 0.75)!important;
font-family: Inter;
font-size: 14px;
font-style: normal;
font-weight: 400;
line-height: 22px;
  }
</style>